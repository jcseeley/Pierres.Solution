@{
  Layout = "_Layout";
}

@using Pierres.Models
@model List<Treat>

<h1>Treats</h1>
<hr/>
@if (@Model.Count == 0)
{
  <h3>No Treats Available</h3>
} 
else
{
  IOrderedEnumerable<Treat> treats = Model.OrderBy(treat => treat.Name);  
  foreach(Treat treat in treats)
  {
    <h3>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</h3>  
  }
}
<hr/>
@if (User.Identity.IsAuthenticated)
{
  <button class="btn btn-success">@Html.ActionLink("ADD TREAT", "Create")</button>
  <button class="btn btn-danger">@Html.ActionLink("DELETE ALL", "DeleteAll")</button>
}