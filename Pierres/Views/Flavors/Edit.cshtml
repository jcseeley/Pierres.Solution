@{
  Layout = "_Layout";
}

@model Pierres.Models.Flavor

<h2>Edit @Html.DisplayFor(model => model.Name)</h2>
<hr/>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.FlavorId)
  <h3>@Html.LabelFor(model => model.Name, "Flavor Name:")</h3>
  @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @required="required" } } )
  <br>
  @if (ViewBag.Error != null && ViewBag.Error == "exist")
  {
    <span style="color:red;">FLAVOR ALREADY EXISTS!</span>
  }
  <br>
  <input type="submit" value="Save" />
}
<hr/>
<h4>@Html.ActionLink($"Back to {Model.Name}'s Details", "Details", new { id = Model.FlavorId })</h4>