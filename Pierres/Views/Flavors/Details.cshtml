@{
  Layout = "_Layout";
}

@using Pierres.Models
@model Pierres.Models.Flavor

<h2>@Html.DisplayFor(model => model.Name)</h2>
<hr/>
@if (Model.JoinEntities.Count == 0)
{
  <h3>No Associated Treats</h3>
}
else
{
  <h3>Treats:</h3>
  @foreach(Taste join in Model.JoinEntities)
  {
    <h4>@Html.ActionLink($"{join.Treat.Name}", "Details", "Treats", new { id = join.Treat.TreatId})</h4>
    @if (User.Identity.IsAuthenticated)
    {
      @using (Html.BeginForm("DeleteTreat", "Flavors"))
      {
        @Html.Hidden("joinId", @join.TasteId)
        <input type="submit" value="Remove"/><br><br>
      }
    }
  }
}
<hr/>

@if (User.Identity.IsAuthenticated)
{
  <button>@Html.ActionLink("ADD FLAVOR", "AddFlavor", new { id = Model.FlavorId })</button>
  <button>@Html.ActionLink("EDIT", "Edit", new { id = Model.FlavorId })</button>
  <button>@Html.ActionLink("DELETE", "Delete", new { id = Model.FlavorId })</button>
}