@{
  Layout = "_Layout";
}

@using Pierres.Models
@model List<Flavor>

<h1>Flavors</h1>
<hr/>
@if (@Model.Count == 0)
{
  <h3>No Flavors Added</h3>
} 
else
{
  IOrderedEnumerable<Flavor> flavors = Model.OrderBy(flavor => flavor.Name);  
  foreach(Flavor flavor in flavors)
  {
    <h3>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId})</h3>  
  }
}
<hr/>
@if (User.Identity.IsAuthenticated)
{
  <button>@Html.ActionLink("ADD FLAVOR", "Create")</button>
}