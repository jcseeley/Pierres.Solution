@{
  Layout = "_Layout";
}

@model Pierres.Models.Flavor
<h2>Delete Flavor</h2>
<hr />
<h4>Please confirm removal of "@Html.DisplayFor(model => model.Name)".</h4><br>

@using (Html.BeginForm())
{
  <input type="submit" value="CONFIRM" />
}
<hr />
<h4>@Html.ActionLink($"Back to {Model.Name}'s Details", "Details", new { id = Model.FlavorId })</h4>